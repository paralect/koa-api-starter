<mjml>
  <mj-head>
    <mj-include path="./styles/index.mjml" />
  </mj-head>

  <mj-body>
    <mj-include path="./components/header.mjml" />

    <mj-section mj-class="main-section">
      <mj-column vertical-align="middle" width="100%">
        <mj-text mj-class="big-text">
          Hi, there.
        </mj-text>

        <mj-text mj-class="text">
          Thanks for checking out Ship, we hope our products can make your routine
          life a little more enjoyable.
        </mj-text>

        <mj-button
          mj-class="btn"
          href="{{verifyEmailUrl}}"
        >
          Verify Your Email
        </mj-button>
      </mj-column>
    </mj-section>

    <mj-section mj-class="bottom-section">
      <mj-column vertical-align="middle" width="70%">
        <mj-text mj-class="small-text">
          INTERESTING FACT
        </mj-text>

        <mj-text mj-class="tiny-text">
          It took more than three years to build the Titanic.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
