{
  "name": "koa-api-starter",
  "version": "2.3.0",
  "description": "Koa api",
  "private": false,
  "main": "src/app.js",
  "author": "Paralect",
  "license": "MIT",
  "keywords": [
    "koa",
    "rest api",
    "paralect"
  ],
  "scripts": {
    "build": "run-s build:**",
    "build:email": "mjml ./src/assets/emails/*.mjml -o ./src/assets/emails/dist/",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node src/app.js",
    "test": "run-s test:**",
    "test:eslint": "eslint ./src",
    "test:mocha": "NODE_ENV=production APP_ENV=test mocha --timeout 20000 --require src/test.js --recursive --exit -c -R spec 'src/**/*.spec.js'",
    "development": "NODE_ENV=development nodemon --watch src src/app.js",
    "add-contributor": "all-contributors add",
    "generate-contributors": "all-contributors generate",
    "migrate": "node ./src/migrator.js",
    "schedule-dev": "nodemon --watch ./src ./src/scheduler ./src/scheduler.js",
    "schedule": "node ./src/scheduler.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "dependencies": {
    "@koa/cors": "3.1.0",
    "@koa/router": "9.4.0",
    "@paralect/common-logger": "0.1.10",
    "@paralect/email-service": "0.2.1",
    "@paralect/node-mongo": "2.1.0",
    "@slizenko/node-mongo-kafka-emitter": "0.0.2",
    "app-module-path": "2.2.0",
    "bcrypt": "5.0.0",
    "google-auth-library": "6.0.6",
    "joi": "17.2.1",
    "kafkajs": "1.14.0",
    "koa": "2.13.0",
    "koa-bodyparser": "4.3.0",
    "koa-helmet": "5.2.0",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-qs": "3.0.0",
    "koa-validate": "1.0.7",
    "lodash": "4.17.20",
    "moment": "2.29.0",
    "moment-duration-format": "2.3.2",
    "nanoid": "3.1.16",
    "node-schedule": "1.3.2",
    "nodemon": "2.0.4",
    "psl": "1.8.0",
    "redis": "3.0.2",
    "socket.io": "2.3.0",
    "socket.io-emitter": "3.1.1",
    "socket.io-redis": "5.4.0"
  },
  "devDependencies": {
    "all-contributors-cli": "6.17.4",
    "chai": "4.2.0",
    "eslint": "7.2.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-import": "2.22.0",
    "faker": "4.1.0",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "mjml": "4.7.0",
    "mocha": "8.1.3",
    "npm-run-all": "4.1.5",
    "supertest": "4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paralect/koa-api-starter.git"
  }
}
