{
  "name": "koa-api-starter",
  "version": "2.3.0",
  "description": "Koa api",
  "private": false,
  "main": "src/app.js",
  "author": "Paralect",
  "license": "MIT",
  "keywords": [
    "koa",
    "rest api",
    "paralect"
  ],
  "scripts": {
    "build": "run-s build:**",
    "build:email": "mjml ./src/assets/emails/*.mjml -o ./src/assets/emails/dist/",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node src/app.js",
    "test": "run-s test:**",
    "test:eslint": "eslint ./src",
    "test:mocha": "NODE_ENV=production APP_ENV=test mocha --timeout 20000 --require src/test.js --recursive --exit -c -R spec 'src/**/*.spec.js'",
    "development": "NODE_ENV=development nodemon --watch src src/app.js",
    "add-contributor": "all-contributors add",
    "generate-contributors": "all-contributors generate",
    "migrate": "node ./src/migrator.js",
    "schedule-dev": "nodemon --watch ./src ./src/scheduler ./src/scheduler.js",
    "schedule": "node ./src/scheduler.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "dependencies": {
    "@koa/cors": "3.1.0",
    "@koa/multer": "3.0.0",
    "@koa/router": "10.0.0",
    "@paralect/common-logger": "0.1.10",
    "@paralect/email-service": "0.3.0",
    "@paralect/node-mongo": "2.1.1",
    "app-module-path": "2.2.0",
    "aws-sdk": "2.976.0",
    "bcrypt": "5.0.1",
    "google-auth-library": "7.0.4",
    "joi": "17.4.0",
    "koa": "2.13.1",
    "koa-bodyparser": "4.3.0",
    "koa-helmet": "6.1.0",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-qs": "3.0.0",
    "koa-validate": "1.0.7",
    "lodash": "4.17.21",
    "moment": "2.29.1",
    "moment-duration-format": "2.3.2",
    "multer": "1.4.3",
    "node-schedule": "2.0.0",
    "nodemon": "2.0.7",
    "psl": "1.8.0",
    "redis": "3.1.2",
    "socket.io": "4.1.1",
    "socket.io-emitter": "3.2.0",
    "socket.io-redis": "6.1.0"
  },
  "devDependencies": {
    "all-contributors-cli": "6.20.0",
    "chai": "4.3.4",
    "eslint": "7.25.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "faker": "5.5.3",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "mjml": "4.10.2",
    "mocha": "8.3.2",
    "npm-run-all": "4.1.5",
    "supertest": "6.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paralect/koa-api-starter.git"
  }
}
